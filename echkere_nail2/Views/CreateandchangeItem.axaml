<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="echkere_nail2.CreateandchangeItem"
		x:DataType="vm:ItemViewModel"
		xmlns:vm="using:echkere_nail2.ViewModels"
        Title="CreateandchangeItem">
	
	<Grid ColumnDefinitions="*, *" RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto">
		<TextBlock Text="Название:" Grid.Row="0"  VerticalAlignment="Center" Margin="0,5"/>
		<TextBox Grid.Row="1" Grid.Column="0" Name="NameText" Margin="0,0,5,10" Height="30"/>

		<TextBlock Text="Описание:" Grid.Row="2"  VerticalAlignment="Center" Margin="0,5"/>
		<TextBox Grid.Row="3" Grid.Column="0" Name="DescriptionText" Margin="0,0,5,10" Height="60"/>

		<TextBlock Text="Цена:" Grid.Row="4"  VerticalAlignment="Center" Margin="0,5"/>
		<TextBox Grid.Row="5" Grid.Column="0" Name="PriceText" Margin="0,0,5,10" Height="30"/>

		<Button Content="Сохранить" Grid.Row="6"  HorizontalAlignment="Left" Click="Button_Click"/>
	</Grid>
</Window>
