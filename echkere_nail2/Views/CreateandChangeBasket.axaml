<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="echkere_nail2.CreateandChangeBasket"
		x:DataType="vm:BasketViewModel"
		xmlns:vm="using:echkere_nail2.ViewModels"
        Title="CreateandChangeBasket">
	
	<Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto, Auto,Auto, Auto">

		<TextBlock Text="Пользователь:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
		<ComboBox Grid.Row="1" Grid.Column="0"
                  ItemsSource="{Binding Users}"
                  Name="UsersCombo"
                  Margin="5"
                  Height="30">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding IdUser}"/>
						<TextBlock Text="."/>
						<TextBlock Text="{Binding Name}"/>
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Товар:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
		<ComboBox Grid.Row="3" Grid.Column="0"
                  ItemsSource="{Binding Items}"
                  Name="ItemsCombo"
                  Margin="5"
                  Height="30">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding IdItem}"/>
						<TextBlock Text="."/>
						<TextBlock Text="{Binding Name}"/>
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Количество:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
		<TextBox Grid.Row="5" Grid.Column="0" Name="CountText" Margin="5" Height="30"/>

		<Button Content="Сохранить"
                Grid.Row="6" Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="5"
                Click="Button_Click"/>
	</Grid>
</Window>
